  "keywords": [
    "masking",
    "data-masking",
    "pii",
    "privacy",
    "security",
    "utility"
  ],
  "author": {
    "name": "Jacques Murray",
    "email": "jacquesmmurray@gmail.com",
    "url": "https://github.com/Jacques-Murray"
  },
